[color]
	ui = auto
[alias]
	m = mergetool
	co = checkout
	d = difftool
[rerere]
	enabled = true
[pull]
	rebase = true
[fetch]
	prune = true
[core]
 	excludesfile = ~/.gitignore_global
 	autocrlf = input
	editor = code --wait
[diff]
 	tool = vscode
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE
[merge]
	tool = vscode
[mergetool "vscode"]
	cmd = code --wait $MERGED
[push]
	autoSetupRemote = true
